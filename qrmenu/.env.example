# Restaurant Menu System - Environment Configuration
# Copy this file to .env and update the values

# Environment
ENVIRONMENT=development  # development, staging, production

# Database Configuration
DB_HOST=localhost
DB_NAME=restaurant_menu
DB_USER=root
DB_PASS=your_secure_password_here

# Site Configuration
SITE_URL=http://localhost/qrmenunew/qrmenu/

# Security
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here_minimum_32_characters
CSRF_SECRET=your_csrf_secret_key_here

# Email Configuration (for notifications)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_FROM_ADDRESS=noreply@lezzetrestaurant.com
MAIL_FROM_NAME="Lezzet Restaurant"

# File Upload Limits
MAX_FILE_SIZE=5242880  # 5MB in bytes
UPLOAD_PATH=/var/www/html/restaurant-menu/backend/uploads/

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Session Configuration
SESSION_LIFETIME=86400  # 24 hours
SESSION_DOMAIN=localhost

# Admin Configuration
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=change_this_password
DEFAULT_ADMIN_EMAIL=admin@lezzetrestaurant.com

# API Keys (optional integrations)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
PUSHER_APP_ID=your_pusher_app_id
PUSHER_KEY=your_pusher_key
PUSHER_SECRET=your_pusher_secret
PUSHER_CLUSTER=eu

# SMS Provider (optional)
SMS_PROVIDER=twilio  # twilio, nexmo, etc.
SMS_API_KEY=your_sms_api_key
SMS_API_SECRET=your_sms_api_secret
SMS_FROM_NUMBER=+905551234567

# Payment Gateway (optional)
PAYMENT_PROVIDER=stripe  # stripe, paypal, iyzico
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Cache Configuration
CACHE_DRIVER=file  # file, redis, memcached
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=info  # debug, info, warning, error
LOG_CHANNEL=file  # file, syslog, database

# Backup Configuration
BACKUP_PATH=/var/backups/restaurant-menu/
BACKUP_RETENTION_DAYS=30

# Analytics (optional)
GOOGLE_ANALYTICS_ID=UA-XXXXXXXX-X
FACEBOOK_PIXEL_ID=your_facebook_pixel_id

# Social Media (optional)
FACEBOOK_PAGE_URL=https://facebook.com/lezzetrestaurant
INSTAGRAM_HANDLE=@lezzetrestaurant
TWITTER_HANDLE=@lezzetrestaurant

# Business Information
BUSINESS_NAME="Lezzet Restaurant"
BUSINESS_ADDRESS="Atat√ºrk Caddesi No:123, Seyhan/Adana"
BUSINESS_PHONE="+90 322 123 45 67"
BUSINESS_EMAIL="info@lezzetrestaurant.com"
BUSINESS_HOURS='{"monday":"09:00-23:00","tuesday":"09:00-23:00","wednesday":"09:00-23:00","thursday":"09:00-23:00","friday":"09:00-23:00","saturday":"09:00-23:00","sunday":"09:00-23:00"}'

# Debug & Development
DEBUG_MODE=true
SHOW_ERRORS=true
MAINTENANCE_MODE=false

# CDN Configuration (optional)
CDN_URL=https://cdn.lezzetrestaurant.com
USE_CDN=false

# Security Settings
ENFORCE_HTTPS=false
TRUST_PROXIES=false
ADMIN_IP_WHITELIST=""  # comma-separated IPs, empty for no restriction

# Localization
DEFAULT_LANGUAGE=tr
SUPPORTED_LANGUAGES=tr,en
TIMEZONE=Europe/Istanbul

# PWA Settings
PWA_NAME="Lezzet Restaurant"
PWA_SHORT_NAME="Lezzet"
PWA_THEME_COLOR="#C8102E"
PWA_BACKGROUND_COLOR="#F8FAFC"

# Feature Flags
ENABLE_WAITER_CALLS=true
ENABLE_NOTIFICATIONS=true
ENABLE_THEMES=true
ENABLE_ANALYTICS=true
ENABLE_PWA=true
ENABLE_OFFLINE_MODE=true